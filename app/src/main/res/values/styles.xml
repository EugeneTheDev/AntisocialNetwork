<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostAuthorTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/post_author_color</item>
        <item name="android:textSize">@dimen/post_author_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/post_text_color</item>
        <item name="android:textSize">@dimen/post_text_size</item>
    </style>


</resources>
