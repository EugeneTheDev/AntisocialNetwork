<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>


    <style name="ToolbarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/post_author_color</item>
        <item name="android:textSize">@dimen/author_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/plain_text_size</item>
    </style>

    <style name="TitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/post_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

</resources>
