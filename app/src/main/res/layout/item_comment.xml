<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/comment_padding"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/comment_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/post_margin"
            android:paddingEnd="@dimen/post_margin"
            android:textAppearance="@style/AuthorTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="id labore ex et quam laborum"/>

        <TextView
            android:id="@+id/comment_author_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/post_margin"
            android:paddingEnd="@dimen/post_margin"
            android:textAppearance="@style/AuthorTextStyle"
            app:layout_constraintTop_toBottomOf="@id/comment_author_name"
            tools:text="Eliseo@gardner.biz"/>

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/post_margin"
            android:textAppearance="@style/TextStyle"
            app:layout_constraintTop_toBottomOf="@id/comment_author_email"
            tools:text="Hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

